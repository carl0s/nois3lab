<%= form_for(@work) do |f| %>
  <% if @work.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@work.errors.count, "error") %> prohibited this work from being saved:</h2>

      <ul>
      <% @work.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>

  <div class="row">
    <h2>Service</h2>
    <%= collection_select(:work, :service_id, Service.find(:all), :id, :name) %>
  </div>
  <div class="row">
      <%= text_field_tag 'name', '', :autocomplete => autocomplete_tag_name_works_path %>
  </div>

  <div class="row">
    <h2>Media assets</h2>
    <%= collection_select(:work, :media_id, MediaAsset.find(:all), :id, :name) %>
  </div>
  <div class="row">
    <h2>Clients</h2>
    <%= collection_select(:work, :client_id, Client.find(:all), :id, :name) %>
  </div>
  <div class="row">
    <h2>Team mates</h2>
    <%= collection_select(:work, :teammate_id, Teammate.find(:all), :id, :fullname) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
