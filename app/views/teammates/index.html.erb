<h1>Listing teammates</h1>

<table>
  <tr>
    <th>Fullname</th>
    <th>Bio</th>
    <th>Twitter</th>
    <th>Facebook</th>
    <th>Linkedin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teammates.each do |teammate| %>
  <tr>
    <td><%= teammate.fullname %></td>
    <td><%= teammate.bio %></td>
    <td><%= teammate.twitter %></td>
    <td><%= teammate.facebook %></td>
    <td><%= teammate.linkedin %></td>
    <td><%= link_to 'Show', teammate %></td>
    <td><%= link_to 'Edit', edit_teammate_path(teammate) %></td>
    <td><%= link_to 'Destroy', teammate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

